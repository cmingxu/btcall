.container.user_actions
  - if flash[:notice]
    .row
      .alert.alert-warning{:role => "alert"}= flash[:notice]

  .row.register_form
    .col-md-8
      .panel.panel-default
        .panel-heading
          注册为
          = Settings.site_name
          会员

        .panel-body
          = form_tag "" do
            %fieldset
              .row
                .col-sm-12.col-md-10.col-md-offset-1
                  .form-group
                    = text_field_tag "user[email]", "", :class => "form-control input-lg", :placeholder => "your-email@host.com", :id => "email_field"

                  .form-group
                    = submit_tag "成为会员", :class => "btn btn-lg btn-success btn-block disabled", :id => "submit_button"

          .panel-footer
            已经是
            = Settings.site_name
            会员？
            = link_to "直接登陆", "/login"
